<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Tomar Foto"
            android:id="@+id/btnFoto"
            android:textSize="20dp" android:onClick="evtFoto"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:textColor="#ffffff"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImageView"
            android:layout_below="@+id/btnFoto" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identificacion"
            android:id="@+id/lblID"
            android:layout_above="@+id/txtID" android:layout_centerHorizontal="true" android:textSize="20dp"
            android:textColor="#ffffff"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtID"
            android:layout_above="@+id/btnRegistrar" android:layout_centerHorizontal="true"
            android:gravity="center" android:background="@drawable/borde_textfield"/>
    <Button android:layout_width="wrap_content" android:layout_height="40dp" android:text="Registrar"
            android:id="@+id/btnRegistrar" android:textSize="20dp" android:onClick="evtRegistrar"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp" android:textColor="#ffffff"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btnIr" android:layout_below="@+id/txtID" android:layout_alignRight="@+id/txtID"
            android:background="@drawable/ir" android:layout_marginTop="7dp" android:onClick="evtIr"/>
    <ImageButton android:layout_width="30dp" android:layout_height="30dp" android:id="@+id/btnRestablecer"
                 android:background="@drawable/restablecer" android:onClick="evtRestablecer" android:layout_below="@+id/txtID"
                 android:layout_alignLeft="@+id/txtID" android:layout_marginTop="7dp"/>

</RelativeLayout>
