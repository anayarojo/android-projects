<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture Persona" android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" android:id="@+id/lblCapture" android:gravity="center"
        android:textSize="20dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCaptura" android:layout_below="@+id/lblCapture" android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true" android:gravity="center"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Capturar"
            android:id="@+id/btnCapturar" android:layout_below="@+id/txtCaptura" android:layout_alignLeft="@+id/txtCaptura"
            android:layout_alignRight="@+id/txtCaptura" android:onClick="evtCaptura"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:id="@+id/List" android:layout_below="@+id/btnCapturar" android:layout_centerHorizontal="true"/>

</RelativeLayout>
