<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivityConsultas" >

    <TextView
        android:id="@+id/lblProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/List"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        android:text="Lista De Productos"
        android:textColor="#ffffff"
        android:textSize="17dp" />

    <ListView
        android:id="@+id/List"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_above="@+id/btnBusqueda"
        android:layout_below="@+id/lblProductos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/btnVolver"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/lblProductos"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="62dp"
        android:background="@drawable/volver"
        android:onClick="evtVolver" />

    <Button
        android:id="@+id/btnBusqueda"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/btnVolver"
        android:layout_centerHorizontal="true"
        android:background="@drawable/brode_boton"
        android:onClick="evtBusqueda"
        android:text="Busqueda Scanner"
        android:textColor="#ffffff"
        android:textSize="18dp" />

</RelativeLayout>