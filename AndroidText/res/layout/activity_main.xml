<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtTexto"
            android:layout_marginTop="28dp" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:gravity="center"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="Plaint Text"
            android:id="@+id/lblPlaintext"
            android:gravity="center"
            android:layout_alignRight="@+id/lblPassword" android:layout_alignParentLeft="true"/>
    <TextView android:layout_width="fill_parent" android:layout_height="30dp" android:text="Password"
              android:id="@+id/lblPassword"
              android:gravity="center" android:layout_below="@+id/txtTexto" android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword" android:layout_below="@+id/lblPassword" android:layout_centerHorizontal="true"
            android:gravity="center"/>
    <TextView android:layout_width="fill_parent" android:layout_height="30dp" android:text="Date"
              android:id="@+id/lblDate" android:gravity="center"
              android:layout_below="@+id/txtPassword" android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/txtDate"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblDate"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center"
        android:inputType="date"
        android:maxLength="10" />

    <TextView android:layout_width="fill_parent" android:layout_height="30dp" android:text="E-Mail"
              android:id="@+id/lblEmail" android:gravity="center"
              android:layout_below="@+id/txtDate" android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtMail" android:layout_below="@+id/lblEmail" android:layout_centerHorizontal="true"
            android:gravity="center"/>
    <TextView android:layout_width="fill_parent" android:layout_height="30dp" android:text="Telefono"
              android:id="@+id/lblTelefono" android:gravity="center"
              android:layout_below="@+id/txtMail" android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/txtTelefono" android:layout_below="@+id/lblTelefono" android:layout_centerHorizontal="true"
            android:gravity="center"/>
    
    <TextView android:layout_width="fill_parent" android:layout_height="30dp" android:text="Time"
              android:id="@+id/lblTime" android:gravity="center"
              android:layout_below="@+id/txtTelefono" android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/txtTime"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblTime"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center"
        android:inputType="time"
        android:text="am" />

</RelativeLayout>
