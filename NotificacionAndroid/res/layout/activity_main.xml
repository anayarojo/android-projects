<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90ff5c"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/txtEnviar"
            android:background="#f9ffef" android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_marginTop="130dp" android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:id="@+id/btnEnviar" android:layout_below="@+id/txtEnviar" android:layout_centerHorizontal="true"
            android:onClick="evtEnviar"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notificacion 2"
            android:id="@+id/btnNotifi2"
            android:onClick="evtNotificacion2" android:layout_below="@+id/btnEnviar"
            android:layout_centerHorizontal="true" android:layout_marginTop="57dp"/>

</RelativeLayout>
